configuration {
  modi: "drun";
  case-sensitive: false;
  show-icons: true;
  icon-theme: "Numix-Circle";
  font: "JetBrainsMono Nerd Font 12";

  drun-display-format: "{name}";
  drun-use-desktop-cache: false;
  drun-reload-desktop-cache: false;
  drun-history: true;

  /* Key bindings */
  kb-cancel: "Escape";
}

@theme "~/.config/rofi/theme.rasi"
